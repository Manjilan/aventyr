<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Aventyr</title>
  <link href="https://fonts.googleapis.com/css?family=Josefin+Sans|Raleway" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  <link rel="stylesheet" href="/styles/style.css">
  <!-- <script src="../scripts/app.js"></script> -->
  <script src="../scripts/fontawesome-all.js"></script>
</head>
<body>
  <nav class= "valign-wrapper grey lighten-2">
    <a href="/"><img src="/images/aventyr.png" id="logo"></a>
    <div>
          <a href="/api/cards">Gallery</a>
          <a href="/api/destinations">Destinations</a>
        <% if(!user) { %>
          <a href="/signup">Sign up</a>
          <a href="/login" class="btn teal lighten-3">Log In</a>
        <% } else { %>
          <a href="/api/cards/create"><i class="fas fa-pencil-alt"></i></a>
          <a href="/api/users/<%=user._id%>"><%= user.username %></a>
          <a href="/logout" class="btn teal lighten-3">Log Out</a>
        <% } %>
        </div>
      </nav>
      <div id="target" class="row">
        <h3 class="center-align">Destinations</h3>
        <div class="container row">
        <% for (let destination of destinations) { %>
          <a href="/api/destinations/<%=destination.id%>">
            <div class="col s4">
              <img class="destination-image" src="<%=destination.image%>">
              <h4 class="center-align"><%= destination.name %></h4>
            </div>
          </a>
          <% } %>
        </div>
        </div>
      </body>
      </html>
