<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Aventyr</title>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  <link rel="stylesheet" href="/styles/style.css">
  <!-- <script src="../scripts/app.js"></script> -->
  <script src="../scripts/fontawesome-all.js"></script>

</head>
<body>
  <nav class= "valign-wrapper grey lighten-2">
    <a href="/"><img src="/images/aventyr.png" id="logo"></a>
    <div>
      <a href="/api/destinations">Destinations</a>
        <% if(!user) { %>
          <a href="/signup">Sign up</a>
          <a href="/login" class="btn teal lighten-3">Log In</a>
        <% } else { %>
          <a href="/api/cards/create"><i class="fas fa-pencil-alt"></i></a>
          <a href="/api/users/<%=user._id%>"><%= user.username %></a>
          <a href="/logout" class="btn teal lighten-3">Log Out</a>
        <% } %>
        </div>
      </nav>
      <div id="target" class="row">
        <% for (let card of cards) { %>
          <a href="/api/cards/<%=card.id%>">
          <div class="card-panel col s3 card">
            <img class="cards-image" src="<%=card.image%>">
            <p class="center-align"><%= card.title %></p>
          </a>
          </div>
          <% } %>
        </div>

      </body>
      </html>
