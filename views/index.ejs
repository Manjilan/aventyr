<body>
  <nav class= "valign-wrapper grey sticky-nav-wrapper">
    <a href="/"><img src="/images/aventyr.png" id="logo"></a>
    <div>
      <a href="/api/cards">Gallery</a>
      <% if(!user) { %>
        <a href="" class="signup-btn">Sign up</a>
        <a href="/login" class="btn teal lighten-3">Log In</a>
        <a href="/api/destinations">Destinations</a>

      <% } else { %>
        <a href="/api/users/<%=user.id%>"><%= user.username %></a>
        <a href="/logout" class="btn teal lighten-3">Log Out</a>
      <% } %>
    </div>
  </nav>

  <header class="center-align">
    <h1 class="center-align white-text">AveNtyr</h1>
    <img src="/images/aventyr.png" id = "main-page">
  </header>

      <main>
        <div class="row" id="sign-up">
        <form method="POST" action="/signup" class="col s4 offset-s4">
          <h3 class="center-align">Sign Up</h3>
          <div class="form-group">
            <input type="text" name="username" class="form-control" placeholder="Username" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="email" class="form-control" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password">
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-block btn-primary" value="Sign Up">
          </div>
        </form>
      </div>
        <h3 class="center-align">Destinations</h3>
        <div class="container row carousel">
        <% for (let destination of destinations) { %>
          <div class="col s3 carousel-item">
            <img src="<%=destination.image%>">
            <h4 class="center-align"><%= destination.name %></h4>
          </div>
          <% } %>
        </div>
