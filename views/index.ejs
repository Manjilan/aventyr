<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Aventyr</title>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  <link rel="stylesheet" href="/styles/style.css">
  <script src="./scripts/fontawesome-all.js"></script>
  <script src="./scripts/app.js"></script>

</head>
<body>
  <header class="center-align">
    <h1 class="center-align white-text">AveNtyr</h1>
    <img src="/images/aventyr.png" id = "main-page">
    </header>
  <nav class= "valign-wrapper grey sticky-nav-wrapper">
    <a href="/"><img src="/images/aventyr.png" id="logo"></a>
    <div>
      <a href="/api/cards">Gallery</a>
      <% if(!user) { %>
        <a href="" class="signup-btn">Sign up</a>
        <a href="/login" class="btn teal lighten-3">Log In</a>
        <% } else { %>
          <a href="/api/users/<%=user.id%>"><%= user.username %></a>
          <a href="/logout" class="btn teal lighten-3">Log Out</a>
          <% } %>
        </div>
      </nav>
      <main>
        <div class="row" id="sign-up">
        <form method="POST" action="/signup" class="col s4 offset-s4">
          <h3 class="center-align">Sign Up</h3>
          <div class="form-group">
            <input type="text" name="username" class="form-control" placeholder="Username" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="email" class="form-control" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password">
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-block btn-primary" value="Sign Up">
          </div>
        </form>
      </div>
        <h3 class="center-align">Destinations</h3>
        <div class="container row carousel">
        <% for (let destination of destinations) { %>
          <div class="col s3 carousel-item">
            <img src="<%=destination.image%>">
            <h4 class="center-align"><%= destination.name %></h4>
          </div>
          <% } %>
        </div>
      </main>
      <section class="row info card-panel">
        <div class="col s1 offset-s2">
          <p>Facebook</p>
          <p>Instagram</p>
          <p>LinkedIn</p>
          <p>E-mail Us</p>
        </div>
        <div class="col s1 offset-s1">
          <p>Terms </p>
          <p>Privacy Policy</p>
          <p>Travel</p>
          <p>Business</p>
        </div>
        <div class="col s1 offset-s1">
          <p>Press</p>
          <p>Policies</p>
          <p>Social Responsiblity</p>
          <p>Help</p>
        </div>
        <div class="col s1 offset-s1">
          <p>Careers</p>
          <p>Volunteering</p>
          <p>Contact Us</p>
          <p>FAQs</p>
        </div>
      </section>
      <footer>
        <p class="center-align grey">Â© Aventyr</p>
      </footer>
    </body>
    </html>
